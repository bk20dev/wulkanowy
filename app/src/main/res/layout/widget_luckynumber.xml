<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/luckyNumberWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:theme="@style/WulkanowyTheme"
    tools:context=".ui.modules.luckynumberwidget.LuckyNumberWidgetProvider"
    tools:layout_height="165dp"
    tools:layout_width="165dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:importantForAccessibility="no"
        android:scaleType="fitCenter"
        android:src="@drawable/shape_badge"
        android:tint="?attr/colorWidgetContainer"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/luckyNumberWidgetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="72sp"
        android:textStyle="bold"
        tools:text="17" />

    <ImageButton
        android:id="@+id/luckyNumberWidgetHistoryButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_luckynumber_widget_button"
        android:contentDescription="@string/lucky_number_history_button"
        android:src="@drawable/ic_history"
        android:tint="?attr/colorPrimary"
        app:tint="?attr/colorPrimary"
        tools:ignore="UseAppTint" />

</RelativeLayout>
